[Unit]
Description=AutoShield Daemon
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/jeff/auto/AutoShield
Environment="PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
ExecStart=/home/jeff/auto/AutoShield/venv/bin/python -m src.main
Restart=on-failure
User=root

[Install]
WantedBy=multi-user.target
